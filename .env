# =============================================
# LingMa 默认环境配置
# =============================================
# 这是项目的默认配置 (Default Configuration)
# 1. 开发环境: 直接使用此文件
# 2. 生产环境: 程序启动时若检测到 key 不安全会自动生成 .env.local 覆盖
# 3. 特殊需求: 复制为 .env.development 并修改 (该文件已被 git 忽略)
# =============================================

# --- 基础配置 ---
APP_NAME="灵码小说助手"
APP_DESCRIPTION="灵码小说助手"
VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=true

# --- 服务器配置 ---
HOST="0.0.0.0"
PORT=9871

# --- 数据库配置 ---
# 默认使用 SQLite，生产环境建议修改为 PostgreSQL
DATABASE_URL="sqlite://./data/db.sqlite3"

# --- 安全配置 ---
# 默认开发密钥，生产环境启动时会自动检测并生成新的随机密钥覆盖此值
SECRET_KEY="1234567890"  # JWT 签名密钥
ENCRYPTION_KEY="1234567890"  # 数据加密密钥（留空则自动生成，请务必备份！）
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# AI配置
OPENAI_API_KEY: str = ""
OPENAI_BASE_URL: str = "https://api.nekro.ai/v1"

# --- 日志配置 ---
LOG_LEVEL="INFO"
LOG_BUFFER_SIZE=500

# --- CORS 配置 ---
# JSON 格式数组
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
